<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="WordleX.SettingsPage"
             BackgroundColor="#333333">

    <VerticalStackLayout Padding="20" VerticalOptions="FillAndExpand" Spacing="50">

        <!-- Title (Settings) - Top Center -->
        <Label Text="Settings"
               FontSize="48"
               FontFamily="Franklin Gothic"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               TextColor="White"
               Margin="0,30,0,0" />

        <!-- Activate Cheat Mode  -->
        <Button x:Name="toggleCheatModeButton"
        Text="Activate Cheat Mode"
        TextColor="White"
        BackgroundColor="Red"
        FontAttributes="Bold"
        FontSize="20"   
        CornerRadius="15"
        Padding="15" 
        WidthRequest="250"
        HeightRequest="60"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Clicked="OnToggleCheatModeButtonClicked" />



    </VerticalStackLayout>
</ContentPage>
